<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %></h1>
  
  <p class="lead"></p>
  <hr class="my-4">
  <p style="color: green"><%= notice %></p>
  <p><strong>Last name:</strong> <%= @friend.last_name %></p>
  <p><strong>Email:</strong> <%= @friend.email %></p>
  <p><strong>Phone:</strong> <%= @friend.phone %></p>
  <p><strong>Twitter:</strong> <%= @friend.twitter %></p>
  
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-dark" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-light"%>
  <%= button_to "Delete", @friend,class:"btn btn-danger", method: :delete %>
</div>
