<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control", placeholder: "First name" %>
  </div>

  <div class="field form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class:"form-control", class:"form-control", placeholder: "Last name" %>
  </div>

  <div class="field form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"form-control", class:"form-control", placeholder: "Email" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class:"form-control", class:"form-control", placeholder: "Phone number" %>
  </div>

  <div class="field form-group"> 
    <%= form.label :twitter, style: "display: block" %>
    <%= form.text_field :twitter, class:"form-control", class:"form-control", placeholder: "Twitter" %>
  </div>
  <div class="field form-group"> 
    
    <%= form.number_field :user_id, id: :friend_user_id,  class:"form-control", class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
